{
  // I want to use babel-eslint for parsing!
  "parser": "babel-eslint",
  "env": {
    // I write for browser
    "browser": true,
	  "node": true,
	  "es6": true
  },
	"ecmaFeatures": {
		"jsx": true,
		"modules": true
	},
  // To give you an idea how to override rule options:
  "rules": {
	  "no-unused-vars": 1,
    "quotes": [2, "single"],
    "eol-last": [0],
    "no-mixed-requires": [0],
    "no-underscore-dangle": [0],
	  "react/jsx-uses-react": 1,
	  "react/jsx-uses-vars": 2,
	  "react/react-in-jsx-scope": 1
  },
	"plugins": [
		"react"
	]
}
